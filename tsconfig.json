{
  "compilerOptions": {
    "module": "es6",
    "outDir": "dist",
    "baseUrl": "src",
    "target": "ES2015",
    "jsx": "react",
    "importHelpers": false,
    "moduleResolution": "node",
    "esModuleInterop": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["ESNext", "ES2019", "DOM", "es6"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": false,
    "paths": {
      "pick/*": ["components/PickerElements/*"],
      "nav/*": ["components/NavElements/*"]
    }
  },
  "exclude": ["node_modules", "test", "**/node_modules/*", "oldCode"],
  "extends": "@tsconfig/svelte/tsconfig.json"
}
